# Security
DJANGO_DEBUG=False
DJANGO_SECRET_KEY=change_me_in_production_with_a_long_random_string

# Authentication (JWT)
# JWT_SECRET_KEY=defaults_to_django_secret_key
JWT_ACCESS_TOKEN_LIFETIME=3600
JWT_REFRESH_TOKEN_LIFETIME=604800
JWT_AUTH_COOKIE=jwt
JWT_REFRESH_COOKIE=refresh_token
JWT_COOKIE_SECURE=True

# Database
# Connect to your external database machine
# Format: postgres://user:password@db-machine-ip:5432/database_name
DATABASE_URL=postgres://db_user:db_password@your-db-machine-ip:5432/app_db

# Postgres Credentials (required for the backup service if DATABASE_URL is not used)
PGHOST=your-db-machine-ip
PGPORT=5432
PGUSER=db_user
PGPASSWORD=db_password
PGDATABASE=app_db

# SQLite (fallback for local dev only)
# DATABASE_URL=sqlite:///db.sqlite3

# Network
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,your-app-domain.com
CORS_ALLOW_ALL_ORIGINS=False
CORS_ALLOWED_ORIGINS=https://your-frontend-domain.com

# Backup
# Absolute path or relative to deploy/docker/ directory. Default is ../../backups (project root/backups)
BACKUP_PATH=./backups
# How often to run backup in hours
BACKUP_FREQUENCY_HOURS=24
