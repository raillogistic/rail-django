# Security
DJANGO_DEBUG=False
DJANGO_SECRET_KEY=change_me_in_production_with_a_long_random_string
DJANGO_SETTINGS_MODULE=root.settings.production

# Superuser (optional automation)
DEPLOY_CREATE_SUPERUSER=False
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_PASSWORD=change_me

# Authentication (JWT)
# JWT_SECRET_KEY=defaults_to_django_secret_key
JWT_ACCESS_TOKEN_LIFETIME=3600
JWT_REFRESH_TOKEN_LIFETIME=604800
JWT_AUTH_COOKIE=jwt
JWT_REFRESH_COOKIE=refresh_token
JWT_COOKIE_SECURE=True
# Optional cookie auth + CSRF alignment (map into settings.py)
JWT_ALLOW_COOKIE_AUTH=True
JWT_ENFORCE_CSRF=True
CSRF_COOKIE_NAME=csrftoken

# Database
# Connect to your external database machine
# Format: postgres://user:password@db-machine-ip:5432/database_name
DATABASE_URL=postgres://db_user:db_password@your-db-machine-ip:5432/app_db

# Postgres Credentials (required for the backup service if DATABASE_URL is not used)
PGHOST=your-db-machine-ip
PGPORT=5432
PGUSER=db_user
PGPASSWORD=db_password
PGDATABASE=app_db

# SQLite (fallback for local dev only)
# DATABASE_URL=sqlite:///db.sqlite3

# Network
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,your-app-domain.com
CORS_ALLOW_ALL_ORIGINS=False
CORS_ALLOWED_ORIGINS=https://your-frontend-domain.com

# GraphQL performance middleware (map into settings.py)
GRAPHQL_PERFORMANCE_ENABLED=False

# Cache (shared backend for async exports, rate limiting, etc.)
REDIS_URL=redis://localhost:6379/1

# Export guardrails (map into RAIL_DJANGO_EXPORT in settings.py)
EXPORT_MAX_ROWS=5000
EXPORT_STREAM_CSV=True
EXPORT_RATE_LIMIT_WINDOW_SECONDS=60
EXPORT_RATE_LIMIT_MAX_REQUESTS=30

# Backup
# Absolute path or relative to deploy/docker/ directory. Default is ../../backups (project root/backups)
BACKUP_PATH=./backups
# How often to run backup in hours
BACKUP_FREQUENCY_HOURS=24

# Email
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=your-email@gmail.com
