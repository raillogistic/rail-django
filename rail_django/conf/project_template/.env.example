# Security
DEBUG=True
SECRET_KEY=change_me_in_production

# Database
# Connect to your external Postgres service
# Format: postgres://user:password@external-host:5432/database_name
DATABASE_URL=postgres://postgres:postgres@your-external-ip:5432/my_project

# SQLite (fallback)
# DATABASE_URL=sqlite:///db.sqlite3

# Network
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Backup
# Absolute path or relative to deploy/docker/ directory. Default is ../../backups (project root/backups)
BACKUP_PATH=./backups
# How often to run backup in hours
BACKUP_FREQUENCY_HOURS=24
